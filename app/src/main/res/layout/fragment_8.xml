<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/fragment_8_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@mipmap/gun_test_bg"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_8_left"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_8_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/fragment_8_left"
        />

    <LinearLayout
        android:id="@+id/addBtn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/fragment_8_left"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/add_memto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="50dp"
            android:background="@mipmap/add_meteo"
            />

        <ImageButton
            android:id="@+id/add_poi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="50dp"
            android:background="@mipmap/add_moisture"
             />

        <Button
            android:id="@+id/add_new"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="50dp"
            android:background="@mipmap/add_flow"
             />
    </LinearLayout>

</RelativeLayout>