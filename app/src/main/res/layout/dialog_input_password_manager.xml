<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/hondover_input_password_LinearLayout"
        android:layout_width="400dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/main_dialog_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:id="@+id/input_password_title"
            android:layout_marginTop="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_20"
            android:text="远程正在操作当中"
            android:textColor="@color/black"
            android:focusable="true"
            />
        <com.auto.di.guan.view.XEditText
            android:id="@+id/handover_input_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyEditText"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="16"
            android:hint="输入密码登录"
            android:text=""
            android:inputType="textPassword"
            android:focusableInTouchMode="true"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textSize="@dimen/size_18"
            android:maxLength="32"
            app:x_clearDrawable="@mipmap/edittext_clear"
            app:x_hidePwdDrawable="@mipmap/edittext_hide"
            app:x_showPwdDrawable="@mipmap/edittext_show"
            />
        <TextView
            android:id="@+id/handover_input_password_ok"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:text="登录"
            style="@style/DialogBtnOK"
            />
    </LinearLayout>
</LinearLayout>