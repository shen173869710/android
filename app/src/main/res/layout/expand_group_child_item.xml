<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_expand_group_height"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">


        <TextView
            android:id="@+id/group_item_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/expand_list_child_check"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/main_item_color"
            />

        <TextView
            android:id="@+id/group_item_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/expand_list_child_check"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/main_item_color"
            />

    <TextView
        android:id="@+id/group_item_status"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/expand_list_child_check"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/main_item_color"
        />
        <ImageView
            android:id="@+id/group_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            />
</LinearLayout>